{
  "compilerOptions": {
    "target": "es2017",
    "allowSyntheticDefaultImports": false,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "styles/*": ["src/styles/*"],
      "actions/*": ["src/actions/*"],
      "constants/*": ["src/constants/*"],
      "reducers/*": ["src/reducers/*"],
      "services/*": ["src/services/*"],
      "components/*": ["src/components/*"],
      "store/*": ["src/store/*"]
    }
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src"]
}
